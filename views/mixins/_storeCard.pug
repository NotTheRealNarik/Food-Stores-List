mixin storeCard(store={})

    .store  
        .store__hero
            img(src=`/uploads/${store.photo || 'store.png'}`)
            h2.title
                a(href=`/store/${store.slig}`) #{store.name}
        .store__details
            p= store.description.split(' ').slice(0,25).join(' ') 
            //restricting descripting to 25 words only
            